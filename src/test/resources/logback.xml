<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date{ISO8601} [%highlight(%level)] [%logger{0}] [%thread] message=[%message] %replace(exception=[%xException]){'^exception=\[\]$',''}%n
            </pattern>
        </encoder>
    </appender>

    <logger name="uk" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>

